{
	"name": "vwnode",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"local": "tsup src/index.ts --out-dir .temp && node .temp/index.js",
		"dev": "NODE_OPTIONS='--no-warnings' nodemon",
		"build": "tsup src/index.ts --out-dir dist --format esm,cjs --minify",
		"start": "node dist/index.js",
		"clean": "rm -rf dist .temp",
		"lint": "biome lint",
		"format:check": "biome format",
		"format": "biome format --write",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "latest",
		"nodemon": "^3.1.4",
		"ts-node": "^10.9.2",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"@biomejs/biome": "^1.8.3"
	}
}
