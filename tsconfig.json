{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"jsx": "react-jsx",
		"allowJs": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
